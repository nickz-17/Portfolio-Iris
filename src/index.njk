<section class="grid">
  {% for project in collections.projects | reverse %}
  <article class="card">
    <a href="{{ project.url }}">
      <img src="{{ project.data.cover }}" alt="{{ project.data.title }}" loading="lazy">
      <h3>{{ project.data.title }}</h3>
      {% if project.data.tags %}<p class="tags">{{ project.data.tags | join(", ") }}</p>{% endif %}
    </a>
  </article>
  {% endfor %}
</section>
